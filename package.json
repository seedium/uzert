{
  "name": "@uzert/core",
  "version": "1.0.0",
  "description": "Robust, lightweight, module node.js framework",
  "private": true,
  "author": "Seedium",
  "repository": {
    "type": "git",
    "url": "https://github.com/seedium/uzert"
  },
  "scripts": {
    "build": "gulp build --dist node_modules/@uzert",
    "dev": "gulp development --dist node_modules/@uzert",
    "postbuild": "gulp move",
    "prebuild:prod": "npm run clean",
    "build:prod": "gulp build",
    "build:samples": "gulp install:samples && npm run build && gulp build:samples && gulp test:samples && gulp test:e2e:samples",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status",
    "test": "nyc --require ts-node/register mocha packages/core/**/*.spec.ts --reporter spec --retries 3 --exit",
    "test:integration": "mocha \"integration/*/{,!(node_modules)/**/}/*.spec.ts\" --reporter spec --require ts-node/register --require 'node_modules/reflect-metadata/Reflect.js' --exit",
    "test:docker:up": "docker-compose -f integration/docker-compose.yml up -d",
    "test:docker:down": "docker-compose -f integration/docker-compose.yml down -d",
    "lint": "concurrently 'npm run lint:packages' 'npm run lint:integration' 'npm run lint:spec'",
    "lint:integration": "eslint 'integration/*/{,!(node_modules)/**/}/*.ts' -c '.eslintrc.spec.js' --fix",
    "lint:packages": "eslint 'packages/**/**.ts' --fix --ignore-pattern 'packages/**/*.spec.ts'",
    "lint:spec": "eslint 'packages/**/**.spec.ts' -c '.eslintrc.spec.js' --fix",
    "prerelease": "gulp copy-misc && npm run build && standard-version --dry-run && npm run build:prod",
    "release": "lerna publish"
  },
  "dependencies": {
    "reflect-metadata": "0.1.13",
    "tslib": "1.11.1"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-angular": "8.3.4",
    "@types/chai": "4.2.11",
    "@types/chai-as-promised": "7.1.2",
    "@types/gulp": "4.0.6",
    "@types/mocha": "7.0.2",
    "@types/reflect-metadata": "0.1.0",
    "@types/sinon": "7.5.2",
    "@typescript-eslint/eslint-plugin": "2.26.0",
    "@typescript-eslint/parser": "2.26.0",
    "awesome-typescript-loader": "5.2.1",
    "bson": "4.0.4",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "commitlint-circle": "1.0.0",
    "concurrently": "5.1.0",
    "core-js": "3.6.4",
    "coveralls": "3.0.11",
    "delete-empty": "3.0.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-import": "2.20.2",
    "fancy-log": "1.3.3",
    "fastify": "2.13.0",
    "fastify-plugin": "1.6.1",
    "fastify-static": "2.6.0",
    "gulp": "4.0.2",
    "gulp-clang-format": "1.0.27",
    "gulp-clean": "0.4.0",
    "gulp-sourcemaps": "2.6.5",
    "gulp-typescript": "5.0.1",
    "gulp-watch": "5.0.1",
    "husky": "4.2.3",
    "lerna": "3.20.2",
    "lint-staged": "10.1.1",
    "mocha": "7.1.1",
    "nodemon": "2.0.2",
    "nyc": "15.0.0",
    "object-hash": "2.0.3",
    "pino": "6.0.0",
    "prettier": "2.0.2",
    "sinon": "9.0.1",
    "sinon-chai": "3.5.0",
    "standard-version": "7.1.0",
    "swagger-ui-dist": "3.25.0",
    "ts-node": "8.8.1",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": ">= 10.13.0"
  }
}
